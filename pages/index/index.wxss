.bccwx-login {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #ddd;
}
.bccwx-login-input {
  text-indent: 2em;
}
.bccwx-login-con {
  width: 500rpx;
  padding: 20rpx 20rpx 0;
  background-color: #fff;
}
.bccwx-login-user {
  height: 80rpx;
  color: #555;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.bccwx-login-password {
  height: 70rpx;
  color: #555;

}

button.bccwx-login-btn {
  margin-top: 20rpx;
  height: 90rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 90rpx;
  background-color: #1479d7;
  padding: 0;
  font-size: 30rpx;
}
button.bccwx-login-btn:hover {
  background-color: #1479d7;
}
.bccwx-login-placeholder {
  color: #ccc;
  font-size: 28rpx;
}
.bccwx-login-extraopts {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.bccwx-login-auto {
  font-size: 28rpx;
  color: #fff;
}