/* pages/department/department.wxss */
.bccwx-department-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
}
.bccwx-department-name {
    font-size: 28rpx;
    color: #555;
    cursor: pointer;
}
.bccwx-department-action {
    font-size: 28rpx;
    color: #999;
    font-weight: 600;
    cursor: pointer;
}